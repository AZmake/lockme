@import "../Base/index.wxss";

/* 整体样式 */
.simple-valid {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  min-height: 100%;
  max-height: 100%;
}

/* 主体 */
.boxs {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
}

/* 密码输入框 */
.box {
  text-align: center;
  height: 90rpx;
  width: 90rpx;
}

.box.hidden {
  display: none;
}

/* 内容 */
.body {
  display: flex;
  flex-grow: 1;
}

/* 底部 */
.keyboard {
  width: 100%;

  display: flex;
  flex-grow: 0;
  flex-wrap: wrap;
}

.keyboard .buttons {
  display: -webkit-box;
  display: -moz-box;
  display: box;
  width: 100%;
}

.keyboard .button {
  height: 120rpx;

  width:1%;
  -webkit-box-flex:1 ;
  -moz-box-flex: 1;
  box-flex: 1;

  display: flex;
  align-items: center;
  justify-content: center;
}

/* 黑色主题 */
.simple-valid.theme-black {
  color: #fff;
  background: #353435;
}

.theme-black .box,
.theme-black .button {
  border: 1rpx #4D4C4D solid;
}

/* 白色主题 */
.simple-valid.theme-white {
  color: #000;
  background: #F8F8F8;
}

.theme-white .box.box,
.theme-white .button {
  border: 1rpx #fff solid;
}



