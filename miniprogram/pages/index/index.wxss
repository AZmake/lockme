/**搜索框部分**/
.input-wrap {
  flex-grow: 1;
}

.input-button {
  flex-grow: 0;
}

.index-input .input {
  height: 52rpx;

  padding: 20rpx;
  border-radius: 10rpx;

  line-height: 32rpx;
}

.theme-black .index-input .input {
  background: #4D4C4D;
  border: 1px #4D4C4D solid;
}

.theme-white .index-input .input {
  background: #fff;
  border: 1px #fff solid;
}
